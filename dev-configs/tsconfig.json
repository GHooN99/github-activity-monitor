{
  "compilerOptions": {
    "target": "ES2022",
    "module": "preserve",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "../dist",
    "rootDir": "../src"
  },
  "include": ["../src/**/*"],
  "exclude": ["../node_modules", "../dist", "**/*.test.ts", "**/*.spec.ts"]
}
